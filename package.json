{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "axm-internals",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "packageManager": "bun@1.3.0",
    "engines": {
        "node": ">=22",
        "bun": ">=1.3"
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prepare": "lefthook install",
        "dev": "turbo run dev",
        "check-types": "turbo run check-types",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "test:coverage": "turbo run test:coverage",
        "lint": "turbo run lint",
        "lint:root": "biome check --write --config-path=biome.root.json",
        "lint:fix": "bun lint:root && turbo run lint:fix",
        "repo-cli": "bun run apps/repo-cli/src/cli.ts",
        "changeset": "changeset",
        "changeset:from-commits": "conventional-changeset -p main -i $(git branch --show-current)",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish",
        "validate": "turbo run validate",
        "clean": "./scripts/clean",
        "coverage:upload": "./scripts/coverage-uploads"
    },
    "dependencies": {},
    "peerDependencies": {},
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@bob-obringer/conventional-changesets": "^0.5.0",
        "@changesets/cli": "^2.29.8",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@types/bun": "^1.3.6",
        "lefthook": "^2.0.15",
        "rimraf": "^6.1.2",
        "turbo": "^2.7.4",
        "typescript": "^5.9.3"
    }
}
