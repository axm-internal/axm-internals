{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "axm-internals",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "packageManager": "bun@1.3.0",
    "engines": {
        "node": ">=22",
        "bun": ">=1.3"
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prepare": "lefthook install",
        "dev": "turbo run dev",
        "check-types": "turbo run check-types",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "test:coverage": "turbo run test:coverage",
        "lint": "turbo run lint",
        "lint:root": "biome check --write --config-path=biome.root.json",
        "lint:fix": "bun lint:root && turbo run lint:fix",
        "dup:jsinspect": "turbo run dup:jsinspect",
        "dup:jscpd": "turbo run dup:jscpd",
        "dup:check": "turbo run dup:check",
        "dup:jsinspect:cross": "jsinspect -t 50 --ignore \"node_modules|dist|docs|tests|coverage\" ./packages/*/src ./apps/*/src",
        "dup:jscpd:cross": "jscpd --config packages/tooling-config/dup/jscpd.json ./packages/*/src ./apps/*/src",
        "dup:check:cross": "bun run dup:jsinspect:cross && bun run dup:jscpd:cross",
        "repo-cli": "bun run apps/repo-cli/src/cli.ts",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish",
        "validate": "turbo run validate",
        "clean": "./scripts/clean",
        "coverage:upload": "./scripts/coverage-uploads"
    },
    "dependencies": {},
    "peerDependencies": {},
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@changesets/cli": "^2.29.8",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@types/bun": "^1.3.6",
        "jscpd": "^4.0.7",
        "jsinspect-plus": "^3.1.3",
        "lefthook": "^2.0.15",
        "rimraf": "^6.1.2",
        "turbo": "^2.8.1",
        "typescript": "^5.9.3"
    }
}
