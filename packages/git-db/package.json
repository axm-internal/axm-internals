{
    "name": "@axm-internal/git-db",
    "version": "0.1.1",
    "type": "module",
    "main": "src/index.ts",
    "description": "SQLite-backed git commit cache optimized for conventional commit messaging",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "cli": "bun run src/cli/index.ts",
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "dup:jsinspect": "jsinspect -t 50 --ignore \"node_modules|dist|docs|tests|coverage\" ./src",
        "dup:jscpd": "jscpd --config ../../packages/tooling-config/dup/jscpd.json ./src",
        "dup:check": "bun run dup:jsinspect && bun run dup:jscpd",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check-types": "tsc --noEmit",
        "docs": "typedoc",
        "validate": "echo \"Validated\""
    },
    "dependencies": {
        "@axm-internal/cli-kit": "*",
        "cli-table3": "^0.6.5",
        "execa": "^9.6.1",
        "kysely": "^0.28.10",
        "pino": "^10.2.1",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@axm-internal/tooling-config": "*",
        "typedoc": "^0.28.2",
        "typedoc-plugin-markdown": "^4.8.1",
        "typescript": "^5",
        "@types/bun": "^1.3",
        "@types/better-sqlite3": "^7.6.12",
        "@meck93/kysely-bun-sqlite": "^0.2.0",
        "better-sqlite3": "^12.6.2",
        "kysely-bun-worker": "^1.2.1"
    },
    "optionalDependencies": {
        "@meck93/kysely-bun-sqlite": "^0.2.0",
        "better-sqlite3": "^12.6.2",
        "kysely-bun-worker": "^1.2.1"
    }
}
