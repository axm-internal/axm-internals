{
    "name": "@axm-internal/cli-kit",
    "version": "0.3.0",
    "type": "module",
    "main": "src/index.ts",
    "description": "Composable toolkit for building CLI applications with Commander",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "dup:jsinspect": "jsinspect -t 50 --ignore \"node_modules|dist|docs|tests|coverage\" ./src",
        "dup:jscpd": "jscpd --config ../../packages/tooling-config/dup/jscpd.json ./src",
        "dup:check": "bun run dup:jsinspect && bun run dup:jscpd",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check-types": "tsc --noEmit",
        "docs": "typedoc",
        "validate": "echo \"Validated\""
    },
    "dependencies": {
        "@axm-internal/zod-helpers": "*",
        "chalk": "^5.6.2",
        "commander": "^14.0.2",
        "pino": "^10.1.1",
        "pino-pretty": "^13.1.3",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@axm-internal/tooling-config": "*",
        "@types/bun": "^1.3",
        "typedoc": "^0.28.16",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5"
    },
    "peerDependencies": {
        "tsyringe": "^4.10.0"
    }
}
