{
    "name": "@axm-internal/schema-orm",
    "version": "0.1.0",
    "type": "module",
    "main": "src/index.ts",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "dup:jsinspect": "jsinspect -t 50 --ignore \"node_modules|dist|docs|tests|coverage\" ./src",
        "dup:jscpd": "jscpd --config ../../packages/tooling-config/dup/jscpd.json ./src",
        "dup:check": "bun run dup:jsinspect && bun run dup:jscpd",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check-types": "tsc --noEmit",
        "docs": "typedoc",
        "validate": "echo \"Validated\""
    },
    "dependencies": {
        "drizzle-orm": "^0.45.1",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@axm-internal/tooling-config": "*",
        "@biomejs/biome": "^2.3.13",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@types/better-sqlite3": "^7.6.13",
        "@types/bun": "^1.3.8",
        "jscpd": "^4.0.7",
        "jsinspect-plus": "^3.1.3",
        "lefthook": "^2.0.16",
        "typedoc": "^0.28.16",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3"
    },
    "optionalDependencies": {
        "better-sqlite3": "^12.6.2",
        "expo-sqlite": "^16.0.10"
    }
}
