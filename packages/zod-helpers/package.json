{
    "name": "@axm-internal/zod-helpers",
    "version": "0.2.0",
    "type": "module",
    "main": "src/index.ts",
    "description": "A collection of Zod v4 helpers",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "dup:jsinspect": "jsinspect -t 50 --ignore \"node_modules|dist|docs|tests|coverage\" ./src",
        "dup:jscpd": "jscpd --config ../../packages/tooling-config/dup/jscpd.json ./src",
        "dup:check": "bun run dup:jsinspect && bun run dup:jscpd",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check-types": "tsc --noEmit",
        "docs": "typedoc",
        "validate": "echo \"Validated\""
    },
    "dependencies": {
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@axm-internal/tooling-config": "*",
        "axios": "^1.13.2",
        "pino": "^10.1.1",
        "typedoc": "^0.28.2",
        "typedoc-plugin-markdown": "^4.8.1",
        "typescript": "^5",
        "@types/bun": "^1.3"
    },
    "peerDependencies": {
        "axios": "^1.13.2",
        "pino": "^10.1.1"
    },
    "peerDependenciesMeta": {
        "axios": {
            "optional": true
        },
        "pino": {
            "optional": true
        }
    }
}
